@using eShop.Models;
@model IEnumerable<ProductModel>

@{
    ViewBag.Title = "FindProductByTag";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Товары из категории: @ViewBag.Message</h2>
<hr />
@if (Model.Count() < 1)
{
    <h4>По вашему запросу ничего не найдено.</h4>
}
else
{
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-xs-6 col-sm-3">
                <div class="item">
                    <p>
                        <img src="@ProductModel.pathToImage@item.productImage" alt="хех" class="img-thumbnail" style="width: 200px; height: 200px;">
                    </p>
                    <h5>
                        @item.productName
                    </h5>
                    <p>
                        @item.productPrice руб.
                    </p>
                    <p>
                        <a class="btn btn-default" href="@Url.Action("Details","Home",new { id = item.productId })">Подробнее »</a>
                    </p>
                </div>
            </div>
        }
    </div>
}


